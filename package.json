{
    "icon": "images/icon.png",
    "name": "terraform-comments-beautifier",
    "displayName": "Terraform Comments Beautifier",
    "description": "Beautifies comments in terraform(.tf) files",
    "version": "0.0.2",
    "author": {
      "name": "Shadab Ahmed"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "publisher": "sahmed",
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:extension.beautifyTerraformComments"
    ],
    "main": "./out/extension",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/shadabahmed/vscode-terraform-comments-beautifier/"
    },
    "contributes": {
      "commands": [
          {
              "command": "extension.beautifyTerraformComments",
              "title": "Beautify comments"
          }
      ],
      "menus": {
        "explorer/context": [{
            "when": "resourceLangId == hcl",
            "command": "extension.beautifyTerraformComments",
            "group": "YourGroup@1"
        }],
        "editor/context": [{
          "when": "resourceLangId == hcl",
          "command": "extension.beautifyTerraformComments",
          "group": "YourGroup@1"
        }]
      }
  },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}